@model Role




<h1 class="text-primary"> Add new Role</h1>

<form method="Post" asp-action="Login">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Log in</h2>
            <hr />
        </div>
        <div class="mb-3" >
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name"  class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" id="sub" class="btn btn-primary" style="width: 150px;">ADD</button>
    </div>
</form>