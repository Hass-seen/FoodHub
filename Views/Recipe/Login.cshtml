@model User


<h1 class="text-primary"> Admin Only</h1>

<form method="Post" asp-action="Login">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Log in</h2>
            <hr />
        </div>
        <div class="mb-3" >
            <label asp-for="account"></label>
            <input type="text" asp-for="account"  class="form-control" required/>
            <span asp-validation-for="account" class="text-danger"></span>
        </div>
         <div class="mb-3" >
            <label asp-for="password"></label>
            <input type="text" asp-for="password"  class="form-control"/>
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <button type="submit" id="sub" class="btn btn-primary" style="width: 150px;">Log In</button>
    </div>
</form>