@model Recipe

<form method="Post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Add Recipe</h2>
            <hr />
        </div>
        <div class="mb-3" >
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" value=" " class="form-control" required/>
        </div>
         <div class="mb-3" >
            <label asp-for="Ingreadiants"></label>
            <input type="text" asp-for="Ingreadiants" value=" " class="form-control"/>
        </div>
        <div class="mb-3" >
            <label asp-for="Discription"></label>
            <input type="text" asp-for="Discription" value=" " class="form-control"/>
        </div>
        <div class="mb-3" >
            <label asp-for="link"></label>
            <input type="text" asp-for="link" value="." class="form-control"/>
        </div>
        <button type="submit" id="sub" class="btn btn-primary" style="width: 150px;">Add</button>
        <a asp-controller="Recipe" asp-action="IndexRecipe" class="btn btn-secondary" style="width: 150px ;">Back</a>
    </div>
</form>

