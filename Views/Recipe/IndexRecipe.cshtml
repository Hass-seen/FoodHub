@model IEnumerable<Recipe>

@{
    ViewData["title"] = "IndexRecipe";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">الوصفات</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary">
                 إضافة وصفة
            </a>
            <a asp-controller="Ingreadiant" asp-action="IndexIng" class="btn btn-primary">
                 إدارة المكونات
            </a>
        </div>
    </div>


    @foreach (var item in Model)
    {
       
    <div class="feed">
		<h2>@item.Name</h2>
		<h6>@item.DateOfCreation</h6> <br/>
		  <h4 style=''>@item.Recipe_Ingreadiants</h4>
		  <div id="wrapper"><p>@item.Discription</p></div><br/>
          @if (@item.link.Length != "https://www.youtube.com/embed/.".Length)
          {
         <iframe width="560" height="315" src= @item.link title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> <br> 
          }

          <a asp-controller="Recipe" asp-action="Edite" class="btn btn-primary" asp-route-name="@item.Name" >تعديل</a> <a asp-controller="Recipe" asp-action="Delete" class="btn btn-danger" asp-route-name="@item.Name" >مسح</a>
		  </div>
    }

    </div>