@model IEnumerable<Recipe>

@{
    ViewData["title"] = "IndexRecipe";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Recipes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary">
                 add new Recipe
            </a>
        </div>
    </div>


    @foreach (var item in Model)
    {
       
    <div class="feed">
		<a href="" style="">@item.Name<h2>{post.Name}</h2></a>
		<h6>@item.DateOfCreation</h6> <br/>
		  <h4 style=''>@item.Ingreadiants</h4>
		  <div id="wrapper"><p>@item.Discription</p></div><br/>
          @if (@item.link!=".")
          {
         <iframe width="560" height="315" src= ""@item.link title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> 
          }
		  </div>
    }

    </div>