@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Home Page";
}

    <br>
    @foreach (var item in Model)
    {
       
    <div class="feed">
		<h2>@item.Name</h2>
		<h6>@item.DateOfCreation</h6> <br/>
		  <h4 style=''>@item.Ingreadiants</h4>
		  <div id="wrapper"><p>@item.Discription</p></div><br/>
          @if (@item.link!=".")
          {
         <iframe width="560" height="315" src= "https://www.youtube.com/embed/"+@item.link title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> 
          }
		  </div>
    }